<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLogin.Protegida"
             Title="Protegida">
    
    <VerticalStackLayout VerticalOptions="Center"
                         Padding="10"
                         Spacing="10">

        <Frame BackgroundColor="White">

            <VerticalStackLayout>

                <Label Text="Parabéns, você conseguiu!"
                       HorizontalOptions="Center"
                       FontSize="20"
                       TextColor="Black"
                       FontAttributes="Bold"/>

                <Label x:Name="l_nome" 
                       Text="Olá, Kauê!"
                       HorizontalOptions="Center"
                       TextColor="Black"
                       Padding="10"/>

                <Button Text="Desconectar" 
                        BackgroundColor="Red"
                        FontSize="20"
                        Margin="10"
                        FontAttributes="Bold"
                        BorderWidth="3"
                        BorderColor="Black"
                        Clicked="btn_clicked"/>

            </VerticalStackLayout>
            
            
        </Frame>
        
        
        
        
    </VerticalStackLayout>
    
</ContentPage>